<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:id="@+id/mainltt">

    <TextView
        android:id="@+id/onum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/lorin_regular"
        android:text="Order Number : "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/onum"
        android:fontFamily="@font/lorin_regular"
        android:text="1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/brandd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand Name"
        android:textSize="15sp"
        android:layout_below="@id/onum"
        android:fontFamily="@font/lorin_regular"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/descr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small descreption"
        android:textSize="15sp"
        android:layout_below="@id/brandd"
        android:fontFamily="@font/lorin_regular"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/lorin_extrabold"
        android:text=">"
        android:textSize="21sp" />



</RelativeLayout>