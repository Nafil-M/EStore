<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/sss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_curved_white">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:padding="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/lorin_bold"
            android:textSize="19sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/sss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_curved_blue">


        <TextView
            android:id="@+id/addresss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Al-Sudan Street, Abu Dhabi, UAE"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/lorin_bold"
            android:textSize="19sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="98765432112"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/lorin_bold"
            android:textSize="19sp"
            android:layout_below="@id/addresss"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>



</RelativeLayout>