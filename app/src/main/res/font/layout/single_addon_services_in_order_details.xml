<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:background="@drawable/allside_curved_borderblue">

    <ImageView
        android:id="@+id/imgg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/verified"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Class Air\nFreshener"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/imgg"
        android:layout_marginTop="50dp"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/lorin_bold"
        android:textSize="15dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/lorin_bold"
            android:text="AED 45"
            android:textColor="@color/twaddancolor"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amt"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/minus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/curvedtop_left_blue_low_radius">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/minus" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/numofV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/minus"
                android:background="@drawable/border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/lorin_extrabold"
                    android:text="0"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/plus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/numofV"
                android:background="@drawable/bottomright_curved_blue">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/plus" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
    </RelativeLayout>