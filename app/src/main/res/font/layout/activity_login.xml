<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightcolor"
    tools:context=".Login.LoginActivity">


    <ImageView
        android:id="@+id/twadimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:src="@drawable/twadimgg" />

    <ImageView
        android:id="@+id/loginimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twadimg"
        android:layout_marginTop="55dp"
        android:src="@drawable/img_login" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginimg"
        android:layout_marginTop="60dp">

        <RelativeLayout
            android:id="@+id/headlyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/letsgoo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lorin_regular"
                android:gravity="center"
                android:text="Let's get started"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/letsgoo"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/lorin_regular"
                android:gravity="center"
                android:text="We will send a Verification Code on your Phone number"
                android:textColor="@color/black"
                android:textSize="12sp" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/moblyt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headlyy"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/allside_curved_white_with_border">

            <EditText
                android:id="@+id/mobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Enter Mobile Number"
                android:fontFamily="@font/lorin_regular"
                android:inputType="number"
                android:maxLength="13"
                android:padding="15dp"
                android:textColor="@color/black" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headlyy"
            android:layout_marginStart="25dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/lorin_regular"
            android:text="Mobile Number"
            android:textColor="@color/grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/error_mob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/moblyt1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lorin_bold"
            android:text="Invalid Input"
            android:textColor="@color/errorred"
            android:textSize="15sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/loginbtn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/error_mob"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/topleft_blue_lesscurved"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/lorin_bold"
                android:text="Continue"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>