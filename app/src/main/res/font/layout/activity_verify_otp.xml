<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightcolor"
    tools:context=".Login.LoginActivity">


    <ImageView
        android:id="@+id/twadimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/twadimgg"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:id="@+id/loginimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twadimg"
        android:layout_marginTop="40dp"
        android:src="@drawable/img_verify" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginimg"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:id="@+id/headlyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/letsgoo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lorin_regular"
                android:gravity="center"
                android:text="Verify your number"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/validation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/letsgoo"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:fontFamily="@font/lorin_regular"
                android:text="Please enter the Verification Code send to your Phone Number"
                android:textColor="@color/black"
                android:textSize="12sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/laytverify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headlyy"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/otp1"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/allside_curved_white_with_border">

                <EditText
                    android:id="@+id/verify1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:fontFamily="@font/lorin_regular"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/otp2"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@+id/otp1"
                android:background="@drawable/allside_curved_white_with_border">

                <EditText
                    android:id="@+id/verify2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:fontFamily="@font/lorin_regular"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/otp3"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@+id/otp2"
                android:background="@drawable/allside_curved_white_with_border">

                <EditText
                    android:id="@+id/verify3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:fontFamily="@font/lorin_regular"
                    android:maxLength="1"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/otp4"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@+id/otp3"
                android:background="@drawable/allside_curved_white_with_border">

                <EditText
                    android:id="@+id/verify4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:fontFamily="@font/lorin_regular"
                    android:maxLength="1"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/otp5"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@+id/otp4"
                android:background="@drawable/allside_curved_white_with_border">

                <EditText
                    android:id="@+id/verify5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:fontFamily="@font/lorin_regular"
                    android:maxLength="1"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/otp6"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@+id/otp5"
                android:background="@drawable/allside_curved_white_with_border">

                <EditText
                    android:id="@+id/verify6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:fontFamily="@font/lorin_regular"
                    android:maxLength="1"
                    android:textColor="@color/black" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/verifybtn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/laytverify"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/topleft_blue_lesscurved"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/lorin_bold"
                android:text="Verify"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verifybtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/www"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/lorin_bold"
                android:text="Didn't recieve any Code"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/resendotp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/www"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lorin_bold"
                android:text="Resend New Code"
                android:textColor="@color/twaddancolor"
                android:textSize="14sp" />


        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>