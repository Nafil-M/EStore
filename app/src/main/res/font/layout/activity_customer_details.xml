<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightcolor"
    tools:context=".Login.CustomerDetailsActivity">

    <ImageView
        android:id="@+id/twadimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/twadimgg" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">


    <RelativeLayout
        android:id="@+id/headlyy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/letsgoo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lorin_bold"
            android:gravity="center"
            android:text="Fill out this Form"
            android:textColor="@color/twaddancolor"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/letsgoo"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/lorin_regular"
            android:gravity="center"
            android:text="Please complete your information"
            android:textColor="@color/black"
            android:textSize="13sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fillpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headlyy"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:id="@+id/firstnamelyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/allside_curved_white_with_border">

            <EditText
                android:id="@+id/fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/lorin_regular"
                android:hint="First Name"
                android:padding="15dp"
                android:textColor="@color/black" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/lorin_regular"
            android:text="First Name"
            android:textColor="@color/grey"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/error_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstnamelyt"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/lorin_regular"
            android:text="Field Empty"
            android:textColor="@color/errorred"
            android:textSize="14sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/lastnamelyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/error_firstname"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/allside_curved_white_with_border">

            <EditText
                android:id="@+id/lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/lorin_regular"
                android:hint="Last Name"
                android:padding="15dp"
                android:textColor="@color/black" />

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstnamelyt"
            android:layout_marginStart="25dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/lorin_regular"
            android:text="Last Name"
            android:textSize="13sp"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/error_secondname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lastnamelyt"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/lorin_regular"
            android:text="Field Empty"
            android:textColor="@color/errorred"
            android:textSize="14sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/error_secondname"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/allside_curved_white_with_border">

            <EditText
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Email ID"
                android:padding="15dp"
                android:fontFamily="@font/lorin_regular"
                android:textColor="@color/black" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lastnamelyt"
            android:layout_marginStart="25dp"
            android:layout_marginTop="12dp"
            android:text="Email ID"
            android:fontFamily="@font/lorin_regular"
            android:textColor="@color/grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/error_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Email"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/lorin_regular"
            android:text="Field Empty"
            android:textColor="@color/errorred"
            android:textSize="14sp"
            android:visibility="gone" />

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/agree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fillpage"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/ee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/checkbox"
                android:fontFamily="@font/lorin_regular"
                android:text="By Creating an Account,you Agree to our "
                android:textColor="@color/grey"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ee"
                android:fontFamily="@font/lorin_bold"
                android:text="Terms"
                android:textSize="11sp"
                android:textColor="@color/twaddancolor" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/continuebtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/agree"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/topleft_blue_lesscurved"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/lorin_bold"
                android:text="Continue"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/continuebtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lorin_bold"
            android:text="Skip"
            android:textColor="@color/twaddancolor"
            android:textSize="15sp" />

    </RelativeLayout>

</RelativeLayout>