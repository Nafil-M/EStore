<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sp_selected_white_bg">

    <RelativeLayout
        android:id="@+id/mainly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">


        <RelativeLayout
            android:id="@+id/img_plate_lyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sp_img"
        android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:id="@+id/plate"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_sp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/allside_curved_lightcolor">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="ID 62092"
                    android:textSize="14sp" />

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/img_plate_lyt">


            <RelativeLayout
                android:id="@+id/spnamelyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/spname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lorin_extrabold"
                    android:text="Super Polish a Car- UAQ"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/info" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ratinglyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spnamelyt"
                android:layout_marginTop="10dp">

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/ratingBar"
                    style="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:isIndicator="true"
                    android:max="5" />


                <TextView
                    android:id="@+id/tvRatingdlg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/ratingBar"
                    android:fontFamily="@font/lorin_bold"
                    android:text="@string/rating"
                    android:textColor="@color/twaddancolor"
                    android:textSize="11sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bodyy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/ratinglyt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="We take care of the vehicle that takes\ncare of you every day"
                    android:textColor="@color/greyy"
                    android:fontFamily="@font/lorin_regular"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bodyy"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lorin_regular"
                    android:text="Service charge of 30.0 AED applicable"
                    android:textColor="@color/twaddancolor" />

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainly">


        <RelativeLayout
            android:id="@+id/qqqq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/plate2"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/allside_curved_borderblue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lorin_bold"
                android:padding="4dp"
                android:textSize="13sp"
                android:text="Expected time of arrival"
                android:textColor="@color/twadblue" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plate2"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lorin_bold"
                android:text="Today"
                android:textColor="@color/errorred"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_toEndOf="@+id/day"
                android:fontFamily="@font/lorin_bold"
                android:text="10:13 AM"
                android:textColor="@color/errorred"
                android:textSize="13sp" />

        </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/qqqq"
            android:background="@drawable/topleft_blue_lesscurved"
            android:gravity="center">


            <TextView
                android:id="@+id/ordernow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lorin_bold"
                android:padding="15dp"
                android:text="Order Now"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>