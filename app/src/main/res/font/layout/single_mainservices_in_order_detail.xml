<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:background="@drawable/allside_curved_borderblue">

    <ImageView
        android:id="@+id/imgg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/verified"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"/>


    <RelativeLayout
        android:id="@+id/bod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/imgg">

        <TextView
            android:id="@+id/hed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lorin_bold"
            android:text="The Economy"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hed"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lorin_bold"
            android:text="Exterior washing + internal\nvacuuming + tyre and resin\npolishing Perfume and Fumi"
            android:textColor="@color/grey"
            android:textSize="14sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/lorin_bold"
            android:text="AED 45"
            android:textColor="@color/twaddancolor" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/green_tick"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/addbtn"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_below="@+id/amt"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/curvedtopleft_lightblue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Add"
                android:textColor="@color/white" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>